<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <UpToDateCheckBuilt Include="assets/css/site.css" Set="Css" />
        <UpToDateCheckBuilt Include="tailwind.config.js" Set="Css" />
    </ItemGroup>

    <ItemGroup>
        <UpToDateCheckBuilt Include="assets/svg/favicon.svg" Set="svg" />
    </ItemGroup>

    <Target Name="Tailwind" BeforeTargets="Build">
        <Exec Command="pnpm run css:build"/>
    </Target>

    <Target Name="Svgo" BeforeTargets="Build">
        <Exec Command="pnpm run svg:build"/>
    </Target>

</Project>
