@page "{statusCode?}"
@model ErrorPageModel
@{
    Layout = "_Layout";

    (var title, var message) = Model.ErrorStatusCode switch {
        404 => ("Error - Not Found", "Sorry, the requested resource was not found."),
        _   => ("Error", "Sorry, there was an error processing this request.  Please try again.")
    };

    Model.Title = title;
    Model.Area = PrimaryNavArea.None;
    Model.SetHtmlPageTitle("Error");

    var alert = new Alert(AlertStatus.Error, message);
}

@await Html.PartialAsync("_Alert", alert)
