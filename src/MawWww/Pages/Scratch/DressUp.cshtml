@page
@model MawPageModel
@{
    Model.Title = "Dress Up";
    Model.Area = PrimaryNavArea.Scratch;
    Model.SetHtmlPageTitle(PrimaryNavArea.Scratch, "Dress Up");
}

@section sidebar {
    <partial name="_ScratchSidebar" />
}

<p>
    I can't decide what to wear today, can you help me?
    <ul>
        <li>Drag my shirt to choose a plain white t-shirt or colorful Hawaiian shirt</li>
        <li>Click the arrow to change the background</li>
        <li>Click the flag to watch my shades fly</li>
        <li>Press 'a' or 'space' to see a surprise</li>
    </ul>
</p>

@await Html.PartialAsync("_IFrame", new IFrame("/scratch/dress-up.html", 640, 480))
