@page
@model MawPageModel
@{
    Model.Title = "Maze";
    Model.Area = PrimaryNavArea.Scratch;
    Model.SetHtmlPageTitle(PrimaryNavArea.Scratch, "Maze");
}

@section sidebar {
    <partial name="_ScratchSidebar" />
}

<p>
    Try to navigate your way out of this maze without walking through walls!
    <ul>
        <li>Use the arrow keys to turn and move in a particular direction</li>
        <li>Hit 'space' to reset and play a brief song</li>
    </ul>
</p>

@await Html.PartialAsync("_IFrame", new IFrame("/scratch/maze.html", 480))
