{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run css:build",
            "name": "Run npm css:build",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/src/MawWww"
        },
        {
            "name": ".NET Core Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/MawWww/bin/Debug/net8.0/MawWww.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MawWww",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
    ]
}
